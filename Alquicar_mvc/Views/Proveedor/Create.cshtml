@model Alquicar_mvc.Models.ProveedorModel

@{
    ViewBag.Title = "Create";
    
}
<div>
    <h3 class="center-text">Registrar Proveedor</h3>
</div>
<div class="mdl-grid demo-content">
    <div class="select demo-graphs  center mdl-color--white mdl-cell mdl-cell--8-col-desktop">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div>         
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    @Html.LabelFor(model => model.Nombres, htmlAttributes: new { @class = "mdl-textfield__label" })
                    @Html.EditorFor(model => model.Nombres, new { htmlAttributes = new { @class = "mdl-textfield__input" } })
                    @Html.ValidationMessageFor(model => model.Nombres, "", new { @class = "text-danger" })                 
                </div>
                <div class="padding-separator"></div>

                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    @Html.LabelFor(model => model.Apellidos, htmlAttributes: new { @class = "mdl-textfield__label" })
                    @Html.EditorFor(model => model.Apellidos, new { htmlAttributes = new { @class = "mdl-textfield__input" } })
                    @Html.ValidationMessageFor(model => model.Apellidos, "", new { @class = "text-danger" })                 
                </div>

                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label getmdl-select getmdl-select__fullwidth">
                    <input class="mdl-textfield__input" type="text" id="gen" name="gen" value="Seleccione tipo" readonly tabIndex="-1">
                    <label for="gen" class="mdl-textfield__label">Genero</label>
                    <ul for="gen" class="mdl-menu mdl-menu--bottom-left mdl-js-menu">
                        @foreach (System.Data.DataRow row in ViewBag.Genero.Rows)
                        {
                            <li class="mdl-menu__item" value="Genero" id=@row["id"].ToString()>@row["nombre"].ToString()</li>
                        }
                    </ul>
                </div>
                <div class="padding-separator"></div>
                <input style="display:none" class="mdl-textfield__input" type="text" id="Genero" name="Genero" value="waitinig">

                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "mdl-textfield__label" })
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "mdl-textfield__input" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>

                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label getmdl-select getmdl-select__fullwidth">
                    <input class="mdl-textfield__input" type="text" id="tipo_cli" name="tipo_cli" value="Seleccione tipo" readonly tabIndex="-1">
                    <label for="tipo_cli" class="mdl-textfield__label">Tipo de Proveedor</label>
                    <ul for="tipo_cli" class="mdl-menu mdl-menu--bottom-left mdl-js-menu">
                        @foreach (System.Data.DataRow row in ViewBag.TipoPer.Rows)
                        {
                            <li class="mdl-menu__item" value="tipo_proveedor" id=@row["id"].ToString()>@row["nombre"].ToString()</li>
                        }
                    </ul>
                </div>
                <div class="padding-separator"></div>
                <input style="display:none" class="mdl-textfield__input" type="text" id="tipo_proveedor" name="tipo_proveedor" value="waitinig">
         
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    @Html.LabelFor(model => model.num_identificacion, htmlAttributes: new { @class = "mdl-textfield__label" })                 
                    @Html.EditorFor(model => model.num_identificacion, new { htmlAttributes = new { @class = "mdl-textfield__input" } })
                    @Html.ValidationMessageFor(model => model.num_identificacion, "", new { @class = "text-danger" })                 
                </div>

                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    @Html.LabelFor(model => model.phone, htmlAttributes: new { @class = "mdl-textfield__label" })                   
                    @Html.EditorFor(model => model.phone, new { htmlAttributes = new { @class = "mdl-textfield__input" } })
                    @Html.ValidationMessageFor(model => model.phone, "", new { @class = "text-danger" })            
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored" />
                    </div>
                </div>
            </div>
        }
        </div>
    </div>
     